    MDScrollView:
        size_hint: 1, None
        height: "135dp"
        scroll_timeout: 100
        do_scroll_y: False
        pos_hint: {"center_x": .5, "center_y":.2}
        MDBoxLayout:
            size_hint: None, 1
            width: self.minimum_width
            padding: "10dp", 0
            spacing: "10dp"
            StreakCard:
                streak_pic: "assets/sample_photo.jfif"
                display_picture: "assets/avatar/avatar2.jpg"
                streak_count: "Day 438"
                username: "Edward Jr."
                cal_burn: "35,890 cal burned"
            StreakCard:
                streak_pic: "assets/images/images2.png"
                display_picture: "assets/avatar/avatar1.webp"
                streak_count: "Day 2"
                username: "Betty McDonald"
                cal_burn: "750 cal burned"
            StreakCard:
                streak_pic: "assets/images/images3.jpg"
                display_picture: "assets/avatar/avatar2.jpg"
                streak_count: "Day 437"
                username: "Edward Jr."
                cal_burn: "35,540 cal burned"
            StreakCard:
                streak_pic: "assets/images/images5.jpg"
                display_picture: "assets/avatar/avatar1.webp"
                streak_count: "Day 1"
                username: "Betty McDonald"
                cal_burn: "275 cal burned"
            StreakCard:
                streak_pic: "assets/images/images4.jpg"
