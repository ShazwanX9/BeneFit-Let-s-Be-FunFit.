<HomeScreen@Screen>:
    name: "home_screen"
    MDFloatLayout:
        md_bg_color: "#EEF5F8"
        MDRelativeLayout:
            size_hint: 1, None
            height: "230dp"
            md_bg_color: theme_color
            pos_hint: {"top":1}
        MDRelativeLayout:
            size_hint: 1, None
            height: "240dp"
            # md_bg_color: "red"
            md_bg_color: "#EEF5F8"
            pos_hint: {"top":.85}
            radius: "100dp"

    MDScrollView:
        # md_bg_color: "red"
        scroll_timeout : 100
        size_hint: 1, .7
        pos_hint: {"center_y": .43}

        MDBoxLayout:
            orientation: "vertical"
            size_hint: 1, None
            height: self.minimum_height

            TopStreak:
            DailyUpdate:
                size_hint: 1, None
                height: "525dp"
                
    MDFloatLayout:
        MDLabel:
            text: "BeneFit"
            size_hint: .77, None
            pos_hint: {"center_x": .5, "center_y":.93}
            font_family: "Lexend"
            font_style: "H6"
            font_size: "24sp"
            theme_text_color: "Custom"
            text_color: "white"
        
        MDBoxLayout:
            size_hint: None, None
            size: self.minimum_width, self.minimum_height
            pos_hint: {"center_x": .78, "center_y":.93}
            MDIconButton:
                icon: "assets/icon/new_feed.png"
                icon_size: "35sp"
            MDIconButton:
                icon: "assets/icon/view_chat.png"
                icon_size: "35sp"
                on_release: 
                    app.root.current = "message_screen"
                    app.root.transition.direction = "left"

        UpcomingCard:
            size_hint: .8, None
            pos_hint: {"center_x": .5, "center_y": .83}

    BottomBar: