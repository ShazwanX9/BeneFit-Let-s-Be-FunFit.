<UpdateCard@MDCard>:
    md_bg_color: 0,0,0,0
    size_hint: 1, None
    height: "225dp"

    # Custom
    display_picture: "assets/sample_photo.jfif"
    posted_image: "assets/sample_photo.jfif"
    username: "Edward Jr."
    workout_name: "Abs Workout"
    rep_set: "30 reps per 10 sets"
    cal_burn: "350 cal burned"
    notice_caption: "[b]Edward Jr.[/b] updated his workout a few hours ago."

    MDRelativeLayout: 
        MDBoxLayout:
            size_hint:1, None
            height: "45dp"
            spacing: "15dp"
            pos_hint: {"center_x": .5, "center_y":.89}
            DisplayPicture:
                source: root.display_picture
            MDLabel:
                markup: True
                text: root.notice_caption
                size_hint: .77, 1
                valign: "center"
                font_family: "Lexend"
                font_style: "Body2"
                font_size: "15sp"
                theme_text_color: "Custom"
                text_color: "black"

        MDCard:
            size_hint: 1, None
            height: "165dp"
            pos_hint: {"center_y": .4}

            ImagePlaceholder:
                source: root.posted_image
                MDRelativeLayout:
                    size_hint_max_x: "300dp"
                    # Image:
                    #     source: health_analytic
                    MDBoxLayout:
                        orientation: "vertical"
                        size_hint: None, None
                        size: 265, 105
                        spacing: "5dp"
                        pos_hint: {"center_x": .5, "center_y": .45}

                        MDLabel:
                            text: root.username
                            font_family: "Lexend"
                            font_style: "Body1"
                            font_size: "13sp"
                            theme_text_color: "Custom"
                            text_color: "white"
                        MDLabel:
                            text: root.workout_name
                            font_family: "Lexend"
                            font_style: "H6"
                            font_size: "24sp"
                            theme_text_color: "Custom"
                            text_color: "white"
                        MDLabel:
                            text: root.rep_set
                            font_family: "Lexend"
                            font_style: "Body1"
                            font_size: "16sp"
                            theme_text_color: "Custom"
                            text_color: "white"
                        MDLabel:
                            text: root.cal_burn
                            font_family: "Lexend"
                            font_style: "Body1"
                            font_size: "16sp"
                            theme_text_color: "Custom"
                            text_color: "white"
                        HighlightLabel:
                            text: "On Streak"
                            size: "100dp", "25dp"


<StreakCard@MDCard>:
    size_hint: None, None
    width: 135
    height: 135
    radius: "15dp"

    # Custom
    streak_pic: "assets/sample_photo.jfif"
    display_picture: "assets/sample_photo.jfif"
    streak_count: "Day 438"
    username: "Edward Jr."
    cal_burn: "35,890 cal burned"

    ImagePlaceholder:
        source: root.streak_pic
        MDRelativeLayout:
            MDBoxLayout:
                orientation: "vertical"
                padding: "10dp"
                DisplayPicture:
                    source: root.display_picture
                HighlightLabel:
                    text: root.streak_count
                    size: "75dp", "25dp"
                MDLabel:
                    text: root.username
                    font_family: "Lexend"
                    font_style: "Body1"
                    font_size: "15sp"
                    theme_text_color: "Custom"
                    text_color: "white"
                MDLabel:
                    text: root.cal_burn
                    font_family: "Lexend"
                    font_style: "Body1"
                    font_size: "12sp"
                    theme_text_color: "Custom"
                    text_color: "white"

