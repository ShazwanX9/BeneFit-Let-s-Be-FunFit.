<DailyUpdate@MDFloatLayout>:
    MDLabel:
        text: "Daily Updates"
        size_hint: .77, None
        pos_hint: {"center_x": .5, "center_y":.9}
        font_family: "Lexend"
        font_style: "H6"
        font_size: "24sp"
        theme_text_color: "Custom"
        text_color: "#0A5B6C"

    MDGridLayout:
        cols: 1
        size_hint: .8, .6
        pos_hint: {"center_x": .5, "center_y":.55}
        UpdateCard:
            display_picture: "assets/avatar/avatar2.jpg"
            posted_image: "assets/sample_photo.jfif"
            username: "Edward Jr."
            workout_name: "Abs Workout"
            rep_set: "30 reps per 10 sets"
            cal_burn: "350 cal burned"
            notice_caption: "[b]Edward Jr.[/b] updated his workout a few hours ago."
  
        UpdateCard:
            display_picture: "assets/avatar/avatar1.webp"
            posted_image: "assets/images/images2.png"
            username: "Betty McDonald"
            workout_name: "Leg Workout"
            rep_set: "10 reps per 3 sets"
            cal_burn: "475 cal burned"
            notice_caption: "[b]Betty McDonald[/b] updated his workout 15 hours ago."


<TopStreak@MDFloatLayout>:
    size_hint: 1, None
    height: 150

    MoreLabel:
        size_hint: .9, 1
